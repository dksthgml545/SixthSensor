<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f4f4f4">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="회원가입"
            android:textColor="#303030"
            android:textSize="30dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ja_username"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_border_edittext"
            android:padding="10dp"
            android:inputType="textPersonName"
            android:hint="이름"
            android:textColorHint="#f4f4f4"
            android:textColor="#f4f4f4"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ja_user_id"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_border_edittext"
            android:padding="10dp"
            android:inputType="text"
            android:hint="아이디"
            android:textColorHint="#f4f4f4"
            android:textColor="#f4f4f4"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="영소/대문자, 숫자를 포함한 4 ~ 13자리"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ja_password"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_border_edittext"
            android:inputType="textPassword"
            android:padding="10dp"
            android:hint="비밀번호"
            android:textColorHint="#f4f4f4"
            android:textColor="#f4f4f4"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ja_passwordconfirm"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_border_edittext"
            android:inputType="textPassword"
            android:padding="10dp"
            android:hint="비밀번호 확인"
            android:textColorHint="#f4f4f4"
            android:textColor="#f4f4f4"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="영소/대문자, 숫자, 특수문자를 포함한 8자리 이상"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/ja_btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="가입하기"
            android:textColor="#f4f4f4"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_border_button" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:text="이미 계정이 있으신가요?"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/ja_btnlogin"
            android:background="#00ff0000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textColor="#ff5858"
            android:text="로그인하기"
            android:textSize="15dp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>