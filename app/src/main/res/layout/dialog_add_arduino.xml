<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#f4f4f4"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="장치 등록"
        android:textStyle="bold"
        android:textColor="@color/colorDefault"
        android:textSize="23sp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:paddingVertical="10dp"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_trash_can"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="ar000001"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/colorDefault"
            android:layout_gravity="center"
            android:id="@+id/daa_arduinoId"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        android:paddingVertical="5dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="장치 이름"
            android:textSize="21sp"
            android:textStyle="bold"
            android:textColor="@color/colorDefault"
            android:layout_gravity="center"
            />
        <EditText
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="3"
            android:paddingHorizontal="10dp"
            android:background="@drawable/rounded_border_edittext"
            android:id="@+id/daa_arduinoName"
            android:textColor="#000000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        android:paddingVertical="10dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:text="센서 범위"
            android:textStyle="bold"
            android:textSize="21sp"
            android:textColor="@color/colorDefault"
            />
        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/daa_number_picker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            app:np_dividerThickness="2dp"
            app:np_dividerColor="@color/colorPrimary"
            app:np_max="50"
            app:np_min="0"
            app:np_order="descending"
            app:np_orientation="horizontal"
            app:np_selectedTextColor="@color/colorPrimary"
            app:np_selectedTextSize="20sp"
            app:np_formatter="@string/number_picker_formatter"
            app:np_typeface="@string/roboto_light"
            app:np_textColor="@color/colorAccent"
            app:np_textSize="15sp"
            app:np_value="10"
            app:np_fadingEdgeEnabled="false"
            app:np_wrapSelectorWheel="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="30dp"
        >

        <Button
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="취소"
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="#f4f4f4"
            android:background="@drawable/rounded_border_button"
            android:backgroundTint="#dd2b2b"
            android:id="@+id/daa_btnCancel"
            />

        <Button
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:id="@+id/daa_btnSubmit"
            android:text="확인"
            android:textSize="17dp"
            android:textColor="#f4f4f4"
            android:layout_marginHorizontal="10dp"
            android:textStyle="bold"
            android:background="@drawable/rounded_border_button"
            />

    </LinearLayout>

</LinearLayout>