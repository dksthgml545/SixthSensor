<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape
            android:shape="rectangle"
            >
            <corners
                android:radius="3dp" />
            <size
                android:width="75dp"
                android:height="25dp" />
            <stroke
                android:color="#333"
                android:width="2dp"
                />
            <gradient
                android:startColor="#fde952"
                android:endColor="#fde952"
                android:angle="270"
                />
        </shape>
    </item>
    <item android:state_checked="false">
        <shape
            android:shape="rectangle"
            >
        <corners
            android:radius="5dp" />
        <size
            android:width="50dp"
            android:height="30dp" />
        <stroke
            android:color="#333"
            android:width="3dp"
            />
        <gradient
            android:startColor="#ccc"
            android:endColor="#ccc"
            android:angle="270"
            />
        </shape>
    </item>
</selector>